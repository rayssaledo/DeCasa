<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="projeto1.ufcg.edu.decasa">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <permission
        android:name="com.example.mapdemo.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="projeto1.ufcg.edu.decasa.permission.MAPS_RECEIVE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.ProfessionalsActivity"
            android:label="@string/title_activity_professionals"
            android:theme="@style/AppThemeCustom" />
        <activity android:name=".views.ProfessionalProfileGoldPlanActivity" />
        <activity
            android:name=".views.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.CadastreOrLoginActivity"
            android:label="@string/title_activity_cadastre_or_login"
            android:theme="@style/AppThemeCustomNoActionBar" />
        <activity
            android:name=".views.UserCadastreActivity"
            android:label="@string/title_activity_user_cadastre"
            android:theme="@style/AppThemeCustomNoActionBar" />
        <activity
            android:name=".views.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeCustomNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppThemeCustomNoActionBar" />
        <activity
            android:name=".views.AssessmentsActivity"
            android:label="@string/title_activity_assessments"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.EvaluationProfessionalActivity"
            android:label="@string/title_activity_evaluation_professional"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.ImageCropActivity"
            android:label="@string/crop_your_picture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.EditUserProfileActivity"
            android:label="@string/title_activity_edit_user_profile"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.MyFavoritesActivity"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppThemeCustom" />
        <activity
            android:name=".views.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppThemeCustom" />
        <activity android:name=".views.ProfessionalProfileFreePlanActivity" />
        <activity android:name=".views.ProfessionalProfileSilverPlanActivity" />
        <activity android:name=".views.ProfessionalProfileBronzePlanActivity" />
        <activity
            android:name=".views.ProfessionalMapActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>