<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_professional"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/default_avatar"/>

        <TextView
            android:id="@+id/tv_professional_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome do profissional"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/iv_professional"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:layout_below="@+id/tv_professional_name"
            android:layout_toEndOf="@+id/iv_professional"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btn_more_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_more_information"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_below="@+id/tv_service"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_evaluation"
            style="@style/StarRatingBar"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_service"
            android:layout_alignParentRight="true"
            android:isIndicator="true"/>

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#64000000"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

