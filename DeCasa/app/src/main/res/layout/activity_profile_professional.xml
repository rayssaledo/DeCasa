<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="projeto1.ufcg.edu.decasa.views.ProfileProfessionalActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_professional"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/default_avatar"
                android:contentDescription=""/>

            <TextView
                android:id="@+id/tv_professional_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do profissional"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/iv_professional" />

            <ImageButton
                android:id="@+id/ib_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription=""
                android:layout_alignBottom="@+id/iv_professional"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_weight="0.3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rb_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StarRatingBar"
            android:isIndicator="true"
            android:layout_alignBottom="@+id/iv_professional"
            android:layout_alignStart="@+id/tv_professional_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atendimento"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/ib_favorite"
            android:layout_toEndOf="@+id/iv_professional"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_balao"

            android:contentDescription=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Avaliações"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/ib_favorite"
            android:layout_toEndOf="@+id/iv_professional"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
